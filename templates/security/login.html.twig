{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    {{ include("header.html.twig") }}


    <section id="connexionForm" >
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="signup-form">
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="checkbox mb-3">You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a></div>
                            {% endif %}
                            <h2 class="text-blue">Se connecter</h2>
                            <p>Remplissez les champs pour vous connectez</p>
                            <hr>
                            <div class="form-group">
                                <input type="email" value="{{ last_username }}" name="email" class="form-control" placeholder="Adresse email" required autofocus>
                            </div>
                            <div class="form-group">
                                <input type="password" name="password" class="form-control" placeholder="Mot de passe" required>
                            </div>
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}">

                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                                </label>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-lg">Se connecter</button>
                            </div>
                        </form>
                        <div class="hint-text">Pas encore inscrit? <a href="./register.html">Inscrivez-vous ici</a></div>
        {#            <div class="hint-text">#}
        {#                <a  href="{{ path('app_forgotten_password') }}">Mot de passe oubli√©</a>#}
        {#            </div>#}
                    </div>
                </div>
                <div class="col-lg-8 connectionImg">
                    <div class="imgForm">
                        <img src="{{asset('images/terrain-tennis.jpeg')}}" alt="terrain de tennis"/>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {{ include("footer.html.twig") }}
{% endblock %}
