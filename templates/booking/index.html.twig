{% extends 'base.html.twig' %}

{% block title %}Booking index{% endblock %}

{% block body %}
    {{ include("header.html.twig") }}
    <main class="mt-100 main-signup-size" role="main">
        <h1 class="text-blue text-center pb-5">Mes réservations en cours</h1>
        <div class="table-responsive">
            <table class="table table-form">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Date début</th>
                    <th scope="col">Date fin</th>
                    <th scope="col">Nom de la résevation</th>
                    <th scope="col">Annuler</th>
                </tr>
                </thead>
                <tbody>
                {% for booking in bookings %}
                    <tr>
                        <td scope="row">{{ booking.id }}</td>
                        <td>{{ booking.beginAt ? booking.beginAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ booking.endAt ? booking.endAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ booking.user.lastname }}</td>
                        <td>
                            {{ include('booking/_delete_form.html.twig') }}
                        </td>

                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Pas de réservations en cours</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </main>

{% endblock %}
