{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}
    <main role="main" class="mt-100">
        <h1 class="text-blue text-center pb-5">Réservation</h1>

        <div class="table-responsive">
            <table class="table table-form">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Date début</th>
                    <th scope="col">Date fin</th>
                    <th scope="col">Terrain</th>
                    <th scope="col">Nom de la résevation</th>
                    {% if is_granted('ROLE_ADMIN') %}
                        <th scope="col">Annuler</th>
                    {% endif %}
                </tr>
                </thead>
                <tbody>
                    <tr>
                        <td scope="row">{{ booking.id }}</td>
                        <td>{{ booking.beginAt ? booking.beginAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ booking.endAt ? booking.endAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ booking.numterrain }}</td>
                        <td>{{ booking.user.lastname }}</td>
                        {% if is_granted('ROLE_ADMIN') %}
                            <td>
                                {{ include('booking/_delete_form.html.twig') }}
                            </td>
                        {% endif %}
                    </tr>
                </tbody>
            </table>
            <a href="{{ path('booking_new') }}">Revenir au calendrier</a>

        </div>





    </main>
{% endblock %}
